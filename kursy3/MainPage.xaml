<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kursy3.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <DatePicker 
                x:Name="dpData1"
                MinimumDate="2003-02-01"/>
            <Entry
                x:Name="Waluta1"
                Placeholder="Waluta"
                Text="usd"/>
            <Button
                x:Name="Walutaa1"
                Text="Wybrana waluta" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="Bcurrency1"
                HorizontalOptions="Fill" 
                />
            <Label x:Name="textCurrency1" Text=""></Label>

            <DatePicker 
                x:Name="dpData2"
                MinimumDate="2003-02-01"/>
                        <Entry
                x:Name="Waluta2"
                Placeholder="Waluta"
                Text="usd"/>
                    <Button
                x:Name="Walutaa2"
                Text="Wybrana waluta" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="Bcurrency2"
                HorizontalOptions="Fill" 
                />  
            <Label x:Name="textCurrency2" Text=""></Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
